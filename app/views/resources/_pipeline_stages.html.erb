<div id="pipeline-stages" class="tab-pane fade in <%= third %>">
  <h3>Pipeline Stages</h3>
  <% if @pipeline_stages.any? %>
  	<ul class="list-group">	
		<% @pipeline_stages.all.each do |pipeline_stage| %>
			<li class="list-group-item" style="display:flex; justify-content: space-between;">
				<strong><%= pipeline_stage.name %></strong>
				<div>
					<a href="pipeline_stage/edit?id=<%= pipeline_stage.id %>"><button class="btn btn-warning">Edit</button></a>
					<a href="pipeline_stage/delete?id=<%= pipeline_stage.id %>" data-method="delete"><button class="btn btn-danger">Delete</button></a>
				</div>
			</li>
		<% end %>  		
  	</ul>
  	<p>Create more pipeline stages by clicking on the create button</p>
  <% else %>
  	<p>No Pipeline Stage Present. Add some by clicking on the create button</p>
  <% end %>

  <div class="container" style="padding-top:20px;">
	  <button type="button" class="btn btn-primary" data-toggle="collapse" data-target="#pipe">Create Lead Source</button><br><br>
	  <div id="pipe" class="collapse">
	    <%= form_for "pipeline", url: "pipeline_stage/create", method: :post do |f| %>
	    	<%= f.label :name %>
	    	<%= f.text_field :name %>
	    	<%= f.submit :create, class: "btn btn-default"%>
	    <% end %>
	  </div>
  </div>
</div>